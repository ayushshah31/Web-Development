<%- include('header'); -%>

    <div>
        <h1 class="box" id="heading">
            <%= listHeading %>
        </h1>
    </div>

    <div class="box">
        <% newListItem.forEach(function(item){ %>
            <form action="/delete" method="post">
                <div class="item">
                    <input type="checkbox" name="checkbox" value="<%=item._id%>" onchange="this.form.submit()">
                    <p><%= item.name %></p>
                </div>
                <input type="hidden" name="listTitle" value="<%= listHeading %>">
            </form>
        <% }); %>
        <form class="item" action="/" method="post">
            <input name="newItem" type="text" autofocus autocomplete="off" placeholder="Add item">
            <button name="list" type="submit" value= <%= listHeading %>>+</button>
        </form>
    </div>

<%- include('footer'); -%>